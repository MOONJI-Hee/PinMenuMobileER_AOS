<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="10dp"
    android:background="@color/f9"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/text20"
        android:id="@+id/tableNo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="13dp"
        android:background="@color/main"
        android:gravity="center_vertical"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="185" />

    <TextView
        style="@style/text18"
        android:id="@+id/regdt"
        android:layout_marginEnd="10dp"
        tools:text="2022.07.28.18:08"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tableNo"
        app:layout_constraintBottom_toBottomOf="@+id/tableNo"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tableNo"
        app:layout_constraintBottom_toTopOf="@+id/bottom" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:paddingBottom="30dp"
        android:paddingHorizontal="10dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/payment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_r6y"
            app:layout_constraintBottom_toTopOf="@+id/print">

            <TextView
                style="@style/text"
                android:id="@+id/tv_total"
                android:text="@string/total"
                android:textSize="16sp"
                android:layout_marginTop="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                style="@style/text20"
                android:id="@+id/gea"
                android:text="@string/zero"
                android:textStyle="bold"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toEndOf="@+id/tv_total"
                app:layout_constraintBottom_toBottomOf="@+id/tv_total" />
            <TextView
                style="@style/text"
                android:id="@+id/tv_gea"
                android:text="@string/gea"
                android:textSize="16sp"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toEndOf="@+id/gea"
                app:layout_constraintBottom_toBottomOf="@+id/gea"/>

            <TextView
                style="@style/text20"
                android:id="@+id/price"
                android:gravity="end"
                android:text="@string/zero"
                android:textStyle="bold"
                android:layout_marginHorizontal="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_gea"
                app:layout_constraintEnd_toStartOf="@id/won" />

            <TextView
                style="@style/text"
                android:id="@+id/won"
                android:text="@string/won"
                android:textSize="16sp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_pay"
                app:layout_constraintBottom_toBottomOf="@+id/price"/>

            <TextView
                style="@style/text18b"
                android:id="@+id/tv_pay"
                android:text="@string/btn_payment2"
                app:layout_constraintBottom_toBottomOf="@+id/price"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/delete"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_r6g"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_del" />
        </LinearLayout>

        <TextView
            style="@style/btn"
            android:id="@+id/print"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="@string/print"
            app:layout_constraintStart_toEndOf="@+id/delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/arrowUp"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/tableNo">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_up"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/arrowDown"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bottom">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>